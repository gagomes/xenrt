<xenrt>

  <!-- 4 host multipath tests  -->

  <variables>
    <PRODUCT_VERSION>Clearwater</PRODUCT_VERSION>
  </variables>

  <prepare>
      <sharedhost>
        <vm name="controller">
          <file>%CONTROLLER_XVA%</file>
          <memory>512</memory>
          <bootparams>rootssh</bootparams>
          <postinstall action="start"/>
        </vm>
      </sharedhost>
    <host id="0">
      <NETWORK controller="controller">
        <PHYSICAL network="NPRI">
          <NIC/>
          <VLAN network="VR01">
            <STORAGE/>
          </VLAN>
          <MANAGEMENT/>
        </PHYSICAL>
        <PHYSICAL network="NSEC">
          <NIC/>
          <VLAN network="VR02">
            <STORAGE/>
          </VLAN>
          <STORAGE/>
        </PHYSICAL>
      </NETWORK>
    </host>
    <pool id="0">
      <host id="1"/>
      <host id="2"/>
      <host id="3"/>
      <NETWORK controller="controller">
        <PHYSICAL network="NPRI">
          <NIC/>
          <VLAN network="VR01">
            <STORAGE/>
          </VLAN>
          <MANAGEMENT/>
        </PHYSICAL>
        <PHYSICAL network="NSEC">
          <NIC/>
          <VLAN network="VR02">
            <STORAGE/>
          </VLAN>
          <STORAGE/>
        </PHYSICAL>
      </NETWORK>
    </pool>
  </prepare>

  <testsequence>
    <serial group="TC-7803">
      <testcase id="xenserver.tc.multipath.TC9088"/>
      <testcase id="xenserver.tc.multipath.TC9084"/>
    </serial>
    <serial>
      <finally>
        <testcase id="guestops.basic.TCShutdown">
          <arg>guest=controller</arg>
          <arg>again</arg>
        </testcase>
      </finally>
    </serial>
  </testsequence>

</xenrt>

