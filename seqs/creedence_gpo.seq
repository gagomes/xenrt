<xenrt>
  <variables>
    <PRODUCT_VERSION>Sarasota</PRODUCT_VERSION>
  </variables>

  <prepare>
    <host id="0">
      <vm name="win7sp1x64nodrivers">
        <distro>win7sp1-x64</distro>
        <arch>x86-64</arch>
        <memory>2048</memory>
        <vcpus>2</vcpus>
        <network device="0" />
        <disk device="0" size="24" />
      </vm>
    </host>
  </prepare>

  <testsequence>
    <testcase id="testcases.guestops.drivers.TCGPODoesNotBSOD"/>
  </testsequence>
</xenrt>
