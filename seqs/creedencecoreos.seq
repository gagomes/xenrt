<xenrt>

  <!-- Docker test sequence -->

  <default name="DISTRO" value="coreos-alpha" />

  <variables>
    <OPTION_KEEP_ISCSI>yes</OPTION_KEEP_ISCSI>
    <PRODUCT_VERSION>Creedence</PRODUCT_VERSION>
    <OPTION_DEFAULT_SR>yes</OPTION_DEFAULT_SR>
    <DOCKER_PASSTHROUGH_PLUGIN>yes</DOCKER_PASSTHROUGH_PLUGIN>
  </variables>

  <scheduler>
    <resources>memory&gt;=20G/disk1&gt;=140G</resources>
    <param>SUPPLEMENTAL_PACK_CDS=xe-phase-2/xscontainer-6.5.0-130.iso</param>
  </scheduler>

  <prepare>
    <pool id="0">
      <host id="0">
        <!-- CoreOS installation -->
        <vm name="${DISTRO}">
          <distro>${DISTRO}</distro>
          <arch>x86-64</arch>
          <memory>1024</memory>
          <vcpus>2</vcpus>
          <network device="0" />
          <disk device="0" size="5" />
          <postinstall action="dockerInstall" />
        </vm>
      </host>
    </pool>
  </prepare>

  <testsequence>
    <serial group="CoreOS">
      <testcase id="xenserver.tc.docker.TCSanityTest" blocker="yes">
        <arg>coreosdistro=${COREOSDISTRO}</arg>
      </testcase>
    </serial>
  </testsequence>

</xenrt>
