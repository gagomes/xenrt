<xenrt>

  <!-- MNR Windows burnintest stress sequence -->

  <variables>
    <PRODUCT_VERSION>Creedence</PRODUCT_VERSION>
    <INSTALL_SR_TYPE>lvm</INSTALL_SR_TYPE>
    <PREPARE_WORKERS>3</PREPARE_WORKERS>
  </variables>

  <default name="GUESTDISTRO" value="ws08r2-x64"/>
  <default name="GUESTMEMORY" value="2048"/>
  <default name="GUESTVCPUS" value="1"/>
  <default name="DURATION" value="48"/>
  <default name="TCID" value="TC-8378"/>

  <prepare>
    <host>
      <vm name="VM1">
        <distro>${GUESTDISTRO}</distro>
        <memory>${GUESTMEMORY}</memory>
        <vcpus>${GUESTVCPUS}</vcpus>
        <disk device="0" size="16"/>
        <network device="0"/>
        <postinstall action="installDrivers"/>
      </vm>
      <vm name="VM2">
        <distro>${GUESTDISTRO}</distro>
        <memory>${GUESTMEMORY}</memory>
        <vcpus>${GUESTVCPUS}</vcpus>
        <disk device="0" size="16"/>
        <network device="0"/>
        <postinstall action="installDrivers"/>
      </vm>
      <vm name="VM3">
        <distro>${GUESTDISTRO}</distro>
        <memory>${GUESTMEMORY}</memory>
        <vcpus>${GUESTVCPUS}</vcpus>
        <disk device="0" size="16"/>
        <network device="0"/>
        <postinstall action="installDrivers"/>
      </vm>
    </host>
  </prepare>

  <testsequence>
    <parallel tc="${TCID}">
      <testcase id="benchmarks.stress.TCburnintest" guest="VM1" group="UPVM1">
        <arg>${DURATION}</arg>
      </testcase>
      <testcase id="benchmarks.stress.TCburnintest" guest="VM2" group="UPVM2">
        <arg>${DURATION}</arg>
      </testcase>
      <testcase id="benchmarks.stress.TCburnintest" guest="VM3" group="UPVM3">
        <arg>${DURATION}</arg>
      </testcase>
    </parallel>
  </testsequence>

</xenrt>
