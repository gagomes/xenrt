<xenrt>
  <variables>
    <PRODUCT_VERSION>Sarasota</PRODUCT_VERSION>
  </variables>

  <prepare>
    <host id="0">
      <vm name="g1">
        <distro>ws12-x64</distro>
        <postinstall action="installDrivers"/>
        <network device="0" />
        <vcpus>1</vcpus>
        <memory>1024</memory>
      </vm>
      <vm name="g2">
        <distro>ws12-x64</distro>
        <postinstall action="installDrivers"/>
        <network device="0" />
        <vcpus>1</vcpus>
        <memory>1024</memory>
      </vm>
    </host>
  </prepare>

  <testsequence>
    <serial group="IxiaTests">
      <testcase id="xenserver.tc.ixia_chariot.IxiaChariotBasedTest">
        <arg>endpointSpec0=RESOURCE_HOST_0/g1</arg>
        <arg>endpointSpec1=RESOURCE_HOST_0/g2</arg>
        <arg>ixiaTestFile=ixiatest.tst</arg>
      </testcase>
    </serial>
  </testsequence>

</xenrt>
