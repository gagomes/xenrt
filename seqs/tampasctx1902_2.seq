<xenrt>
  <variables>
    <PRODUCT_VERSION>Tampa</PRODUCT_VERSION>
  </variables>
  <prepare>
      <host id="0">
        <vm name="lingold">
          <distro>debian70</distro>
          <arch>x86-64</arch>
          <memory>512</memory>
          <vcpus>2</vcpus>
          <network device="0" />
          <disk device="0" size="8" />
          <postinstall action="preCloneTailor"/>
        </vm>
      </host>
  </prepare>

  <testsequence>
    <serial group="Setup">
      <testcase id="xenserver.tc.srpervm.SetupSRsFC">
        <arg>linuxvms=33</arg>
        <arg>windowsvms=0</arg>
      </testcase>
      <testcase id="xenserver.tc.srpervm.ReconfigureRingSize">
        <arg>ringsize=1</arg>
        <arg>applyfix=yes</arg>
      </testcase>
      <testcase id="xenserver.tc.srpervm.CopyVMs" />
    </serial>
    <serial group="LowMem">
      <testcase id="xenserver.tc.srpervm.TCMonitorLowMem" >
        <arg>minutes=60</arg>
        <arg>checkinterval=10</arg>
      </testcase>
    </serial>
  </testsequence>

</xenrt>
