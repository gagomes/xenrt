<xenrt>
  <variables>
    <OPTION_KEEP_SETUP>yes</OPTION_KEEP_SETUP>
    <PRODUCT_VERSION>Clearwater</PRODUCT_VERSION>
  </variables>
  <scheduler>
    <resources>memory&gt;=8G</resources>
    <param>MACHINES_REQUIRED=3</param>
    <flags>privvlan,staticip</flags>
  </scheduler>
  <prepare>
    <vlan name="CLIENT_VLAN" />
    <vlan name="SERVER_VLAN" />
    <host id="0">
      <NETWORK>
        <PHYSICAL network="NPRI">
          <VMS />
          <MANAGEMENT />
          <NIC />
          <VLAN network="CLIENT_VLAN" />
        </PHYSICAL>
      </NETWORK>
      <vm name="ATS">
        <file>/usr/groups/xenrt/ns/ATS_10_5.xva</file>
        <network device="0" />
        <network device="1" bridge="CLIENT_VLAN" />
      </vm>
      <vm name="client1">
        <distro>debian70</distro>
        <memory>256</memory>
        <vcpus>2</vcpus>
        <network device="0" />
        <network device="1" bridge="CLIENT_VLAN" />
        <disk device="0" size="8" />
        <packages>curl,apache2</packages>
      </vm>
      <vm name="client2">
        <distro>debian70</distro>
        <memory>256</memory>
        <vcpus>2</vcpus>
        <network device="0" />
        <network device="1" bridge="CLIENT_VLAN" />
        <disk device="0" size="8" />
        <packages>curl,apache2</packages>
      </vm>
    </host>
    <host id="1">
      <NETWORK>
        <PHYSICAL network="NPRI">
          <VMS />
          <MANAGEMENT />
          <NIC />
          <VLAN network="SERVER_VLAN" />
        </PHYSICAL>
      </NETWORK>
      <vm name="server1">
        <distro>debian70</distro>
        <memory>256</memory>
        <vcpus>2</vcpus>
        <network device="0" />
        <network device="1" bridge="SERVER_VLAN" />
        <disk device="0" size="8" />
        <packages>curl,apache2</packages>
      </vm>
      <vm name="server2">
        <distro>debian70</distro>
        <memory>256</memory>
        <vcpus>2</vcpus>
        <network device="0" />
        <network device="1" bridge="SERVER_VLAN" />
        <disk device="0" size="8" />
        <packages>curl,apache2</packages>
      </vm>
    </host>
    <host id="2">
      <NETWORK>
        <PHYSICAL network="NPRI">
          <VMS />
          <MANAGEMENT />
          <NIC />
          <VLAN network="SERVER_VLAN" />
          <VLAN network="CLIENT_VLAN" />
        </PHYSICAL>
      </NETWORK>
      <vm name="NS-VPX1">
        <file>/usr/groups/xenrt/NSVPX-XEN-10.5-52.11_nc.xva</file>
        <network device="0" />
        <network device="1" bridge="CLIENT_VLAN" />
        <network device="2" bridge="SERVER_VLAN" />
        <postinstall action="setupNetscalerVPX" />
      </vm>
      <vm name="NS-VPX2">
        <file>/usr/groups/xenrt/NSVPX-XEN-10.5-52.11_nc.xva</file>
        <network device="0" />
        <network device="1" bridge="CLIENT_VLAN" />
        <network device="2" bridge="SERVER_VLAN" />
        <postinstall action="setupNetscalerVPX" />
      </vm>
    </host>
  </prepare>
</xenrt>

